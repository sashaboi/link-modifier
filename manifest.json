{
  "manifest_version": 3,
  "name": "Link Modifier",
  "version": "1.0",
  "description": "Automatically opens matching links in a new tab.",
  "permissions": ["storage","activeTab"],
  "host_permissions": [
    "https://*.github.com/*"
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
